/**
 * Get the index storage instance.
 *
 * @return \MakinaCorpus\Ucms\Search\IndexStorage
 */
function ucms_search_index_storage() {
  return \Drupal::service('ucms_search.index_storage');
}

/**
 * Get the indexer instance.
 *
 * @return \MakinaCorpus\Ucms\Search\NodeIndexer
 */
function ucms_search_indexer() {
  return \Drupal::service('ucms_search.node_indexer');
}

/**
 * Menu helper.
 *
 * @param string $index
 *
 * @return string
 *  Index key if exists.
 */
function ucms_search_index_load($index) {
  if (ucms_search_index_storage()->exists($index)) {
    return $index;
  }
  return false;
}

/**
 * Menu helper.
 *
 * @param string $index
 *
 * @return string
 *  Index name if exists.
 */
function ucms_search_index_title($index) {
  $list = ucms_search_index_storage()->names();
  if (array_key_exists($index, $list)) {
    return $list[$index];
  }
  return false;
}

