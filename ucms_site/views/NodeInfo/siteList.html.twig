<ul>
  {% for site in sites %}
    <li>
      {% if site.id in allowed %}
        <a href="{{ url('sso/goto/' ~ site.id, {'query':{'destination': 'node/' ~ node.id}}) }}">
          {{ site.title|escape }}
        </a>
      {% else %}
        <a disabled="disabled" class="disabled" href="{{ url('sso/goto/' ~ site.id, {'query':{'destination': 'node/' ~ node.id}}) }}">
          {{ site.title|escape }}
        </a>
      {% endif %}
      {% if origin and site.id == origin.id %}
        ({{ "Origin"|trans }})
      {% endif %}
    </li>
  {% endfor %}
</ul>
