/**
 * Implements hook_menu_local_tasks_alter().
 */
function ucms_contrib_menu_local_tasks_alter(&$data, $router_item, $root_path) {
  if (preg_match('@^admin/dashboard/content.*$@', $root_path)) {
    $tab = arg(3);
    if (null === $tab) {
      $tab = 'text';
    }
    if ($tab) {
      // Adds node/add links on the content pages.
      if ($types = variable_get('ucms_contrib_tab_' . $tab . '_type')) {
        $names = node_type_get_names();
        foreach ($types as $type) {
          if (node_access('create', $type)) {
            $data['actions']['output'][] = array(
              '#theme' => 'menu_local_action',
              '#link' => [
                'href'  => 'node/add/' . $type,
                'title' => $names[$type],
                'query' => drupal_get_destination(),
              ],
            );
          }
        }
      }
    }
  }
}

