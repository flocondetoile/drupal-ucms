<div class="col-md-12">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>{{ "Type"|trans }}</th>
        <th>{{ "Name"|trans }}</th>
        <th>{{ "Updated"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <td>{{ item.bundle }}</td>
          <td>{{ item.title|escape }}</td>
          <td>{% if item.published %}{{ "Published"|trans }}{% else %}{{ "Unpublished"|trans }}{% endif %}</td>
          <td>
            {{ ucms_actions(item) }}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">
            {{ "There is no content matching your filters."|trans }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>