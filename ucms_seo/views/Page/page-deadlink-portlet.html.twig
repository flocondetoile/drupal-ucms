{% extends 'module:udashboard:views/Page/page.html.twig' %}

{% block item %}
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td>{% if item.targetExists %}{{ "Unpublished"|t }}{% else %}{{ "Deleted"|t }}{% endif %}</td>
    <td>
      {% set type = item.type %}
      {% if type == 'link' %}
        {{ "Link"|t }}
      {% elseif type == 'media' %}
        {{ "Media"|t }}
      {% elseif type == 'unknown' %}
        {{ "Undefined"|t }}
      {% else %}
        {{ type }}
      {% endif %}
    </td>
    <td></td>
  </tr>
{% endblock %}

{% block item_list %}
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>{{ "Title"|trans }}</th>
        <th>{{ "Field"|trans }}</th>
        <th>{{ "Destination"|trans }}</th>
        <th>{{ "Reason"|trans }}</th>
        <th>{{ "Type"|trans }}</th>
        <th>{{ "Edit"|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% else %}
        <tr>
          <td colspan="6">
            {{ "There is no dead links."|trans }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

