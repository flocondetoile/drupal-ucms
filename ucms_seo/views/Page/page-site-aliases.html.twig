{% extends 'module:udashboard:views/Page/page.html.twig' %}

{% block item %}
  <tr>
    <td>{{ item.alias }}</td>
    <td>@todo</td>
    <td>@todo</td>
    <td>{% if item.is_canonical %}<strong>{{ "Yes"|trans }}</strong>{% else %}{{ "No"|trans }}{% endif %}</td>
    <td>{{ item.priority }}</td>
    <td>{% if item.expires %}{{ item.expires|date }}{% else %}{{ "No"|trans }}{% endif %}</td>
    <td>
      {{ udashboard_actions(item) }}
    </td>
  </tr>
{% endblock %}

{% block item_list %}
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>{{ "Alias"|trans }}</th>
        <th>{{ "Content"|trans }}</th>
        <th>{{ "Language"|trans }}</th>
        <th>{{ "Canonical"|trans }}</th>
        <th>{{ "Priority"|trans }}</th>
        <th>{{ "Expires"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        {{ block('item') }}
      {% else %}
        <tr>
          <td colspan="7">
            {{ "This site contains not SEO alias."|trans }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

