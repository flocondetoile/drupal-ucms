}

/**
* Insert deadlink tables.
 */
function ucms_seo_update_7012() {
  $schema = array_intersect_key(
    ucms_seo_schema(),
    array_flip(['ucms_seo_deadlinks_tracking'])
  );
  foreach ($schema as $name => $table) {
    if (!db_table_exists($name)) {
      db_create_table($name, $table);
    }
  }
}

/**
 * Add new columns to deadlink tables.
 */
function ucms_seo_update_7013() {
  $table = 'ucms_seo_deadlinks_tracking';
  $fields = array_intersect_key(
      ucms_seo_schema()['ucms_seo_deadlinks_tracking']['fields'],
      array_flip(['source_field', 'destination_url'])
  );

  foreach ($fields as $name => $column) {
    if (!db_field_exists($table, $name)) {
      db_add_field($table, $name, $column);
    }
  }
}

/**
 * Set weight so that ucms_seo pass after ucms_site in hook_node_save().
 */
function ucms_seo_install_set_weight() {
  $weight = db_select('system', 's')
    ->fields('s', ['weight'])
    ->condition('name', 'ucms_site', '=')
    ->execute()
    ->fetchField()
  ;

  db_update('system')
    ->fields(['weight' => $weight + 1])
    ->condition('name', 'ucms_seo', '=')
    ->execute()
  ;
}
