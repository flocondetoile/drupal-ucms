<div class="col-md-12">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>{{ "Id."|trans }}</th>
        <th>{{ "Title"|trans }}</th>
        <th>{{ "Is default"|trans }}</th>
        <th>{{ "Default status"|trans }}</th>
        <th>{{ "Created"|trans }}</th>
        <th>{{ "Changed"|trans }}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <td>{{ item.id }}</td>
          <td>{{ item.title|escape }}</td>
          <td></td>
          <td>{% if item.isGhost %}{{ "visible"|trans }}{% else %}{{ "invisible"|trans }}{% endif %}</td>
          <td>{{ item.createdAt|time_diff }}</td>
          <td>{{ item.changedAt|time_diff }}</td>
          <td>
            {{ ucms_actions(item) }}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="7">
            {% block empty %}{{ "There is no groups yet."|trans }}{% endblock %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>