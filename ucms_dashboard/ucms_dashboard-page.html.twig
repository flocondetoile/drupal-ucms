{% set classes = ['default', 'success', 'info', 'warning', 'danger'] %}
{% for portlet in portlets %}
  <div class="col-md-4 col-sm-6">
    <div class="panel panel-{{ cycle(classes, loop.index0) }}">
      <div class="panel-heading">
        <h3 class="panel-title">
          {{ portlet.title }}

          {% if portlet.path %}
            <a class="pull-right" href="{{ url(portlet.path) }}">
              {{ "see all"|t }}
              <span aria-hidden="true" class="glyphicon glyphicon-share-alt"></span>
            </a>
          {% endif %}
        </h3>
      </div>
      <div class="panel-body">
        {{ portlet.render }}
      </div>
      {% if portlet.actions %}
        <div class="panel-footer text-right">
          {{ portlet.renderActions }}
        </div>
      {% endif %}
    </div>
  </div>
{% endfor %}
