<?php
/**
 * @file
 * UCMS  - Drag and drop API
 */

/**
 * Implements hook_library().
 */
function ucms_drop_library() {
  $path = drupal_get_path('module', 'ucms_drop');
  return [
    'dragula' => [
      'title'     => "Dragula",
      'homepage'  => 'http://bevacqua.github.io/dragula/',
      'version'   => '3.7.1',
      'js' => [$path . '/resources/dragula.min.js' => []],
      'css' => [$path . '/resources/dragula.min.css' => ['type'  => 'file', 'media' => 'screen'],],
    ],
    'drop' => [
      'title'     => "ÂµCMS drag'n'drop' API",
      'homepage'  => 'http://github.com/makina-corpus/drupal-ucms',
      'version'   => '0.1',
      'js' => [$path . '/resources/drop.js' => []],
      'dependencies' => [['ucms_drop', 'dragula']],
    ],
  ];
}

/**
 * Implements hook_page_build().
 */
function ucms_drop_page_build(&$page) {
  drupal_add_library('ucms_drop', 'drop');
}
